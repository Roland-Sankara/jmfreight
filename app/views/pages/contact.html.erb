<div class="container-fluid major-body largepadding">
	
	<div class="row">
		<div class="col-sm-6 border">
			<%= form_tag contact_path, name: "form1" do %>
			<div class="row email-form">
				<div class="col-md-12">
					<div class="form-group">
						<p class="form-headings">Full Name:</p>
						<input type="text" class="form-control input-lg" name="fullname" id="fullname" required="required">
					</div>
				</div>
				<div class="col-md-12">
					<div class="form-group">
						<p class="form-headings">Email:</p>
						<input type="email" class="form-control input-lg" name="email" id="email" required="required">
					</div>
				</div>
				<div class="col-md-12">
					<div class="form-group">
						<p class="form-headings">Subject:</p>
						<input type="text" class="form-control input-lg" name="subject" id="subject" required="required">
					</div>
				</div>
				<div class="col-md-12">
					<div class="form-group">
						<p class="form-headings">Message:</p>
						<textarea class="form-control" rows="2" name="message" id="message" required="required"></textarea>
					</div>
				</div>
				<div class="col-md-12">
					<%= submit_tag 'Send', class: "btn btn-4 btn-block" %>
				</div>
			</div>	 
			<% end %>
		</div>
		<div class="col-sm-3">
